<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imooc.game2048">

    <!-- 将以前一直用的默认Application给设置成自定义的.config.Config
        MyApplication类的作用是为了放一些全局的和一些上下文都要用到变量和方法之类的 -->
    <application
        android:name=".config.Config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.Game"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ConfigPreference" />
    </application>

</manifest>
